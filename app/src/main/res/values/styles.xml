<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="app__welcomeText" parent="Theme.MaterialComponents.DayNight.DarkActionBar" >
        <item name="android:textSize">36dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>
    <style name="app__secondaryText" parent="Theme.MaterialComponents.DayNight.DarkActionBar" >
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/greySecondary</item>
        <item name="fontFamily">@font/poppins</item>
    </style>
    <style name="app__questions" parent="Theme.MaterialComponents.DayNight.DarkActionBar" >
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">26dp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>
    <style name="app__result" parent="Theme.MaterialComponents.DayNight.DarkActionBar" >
        <item name="android:textColor">@color/mainThemeColor</item>
        <item name="android:textSize">26dp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>
    <style name="Button.Blue" parent="ThemeOverlay.AppCompat">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Button.Default" parent="ThemeOverlay.AppCompat">
        <item name="android:padding">15dp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Button.Answer" parent="ThemeOverlay.AppCompat">
        <item name="android:padding">15dp</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/mainThemeColor</item>
    </style>

</resources>